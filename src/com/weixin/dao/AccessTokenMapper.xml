<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weixin.dao.AccessTokenMapper" >

  <select id="select" resultType="com.weixin.entity.AccessToken">
  select * from access_token where id =1 
  </select>
  
  <update id="update" parameterType="com.weixin.entity.AccessToken">
  update  access_token set  access_token=#{access_token} , add_time=#{add_time} where id = 1 
  </update>
</mapper>